<Window x:Class="MortysDLP.DownloadHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MortysDLP"
        mc:Ignorable="d"
        Title="DownloadHistoryWindow" Height="350" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="7">
        
        <StackPanel>
            <ListBox x:Name="HistoryList" DisplayMemberPath="Title" />
            <StackPanel Orientation="Horizontal">
                <Button Name="ReuseButton" Content="Neu verwenden" Click="Reuse_Click" />
                <Button Name="ClearButton" Content="History leeren" Click="Clear_Click" Margin="7"/>
            </StackPanel>
        </StackPanel>
        
        <TextBlock x:Name="EmptyText"
           Text="Keine History vorhanden"
           FontSize="18"
           Foreground="Gray"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           Visibility="Collapsed"/>
    </Grid>
</Window>
