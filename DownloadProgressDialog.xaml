<Window x:Class="MortysDLP.DownloadProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MortysDLP"
        Icon="/Logos/Icons/mw_globe_32px.ico"
        mc:Ignorable="d"
        Title="Download läuft..." 
        Height="150" 
        Width="400" 
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="InfoText" Text="Download läuft..." Margin="0,0,0,10" FontWeight="Bold"/>
            <ProgressBar x:Name="ProgressBar" Height="25" Minimum="0" Maximum="100"/>
        </StackPanel>
    </Grid>
</Window>
