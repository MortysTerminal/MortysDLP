<Window x:Class="MortysDLP.DownloadPathDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:uitexte = "clr-namespace:MortysDLP.UITexte"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight"
        Icon="/Logos/Icons/mw_globe_32px.ico"
        Title="Download-Pfad ändern"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize" 
        Closing="Window_Closing">
    <Grid Margin="7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Name="lbl_DefaultDownloadPath" Text="Standard Download-Pfad:" Margin="0,7,0,7"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBox x:Name="PathBox" Width="300" Margin="7"/>
            <Button Name="btn_SearchDownloadPath" Content="Durchsuchen..." Margin="7,0,0,0" Click="Browse_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <CheckBox x:Name="cbAudioOnlyPath" VerticalAlignment="Center" Checked="cbAudioOnlyPath_Checked" Unchecked="cbAudioOnlyPath_Unchecked"></CheckBox>
            <TextBlock Name="lbl_DefaultAudioDownloadPath" Text="Audio-Only-Pfad hinzufügen" VerticalAlignment="Center" Margin="7,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <TextBox x:Name="AudioPathBox" Width="300" Margin="7"/>
            <Button x:Name="btn_SearchAudioPath" Content="Durchsuchen..."  Margin="7,0,0,0" Click="BrowseAudio_Click"/>
        </StackPanel>

        <Separator Grid.Row="4" Margin="0,0,7,0"></Separator>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <!--<Button Content="Durchsuchen..." Margin="0,0,10,0" Click="Browse_Click"/>-->
            <Button Name="btn_OK" Content="OK" Width="100" Margin="7" Click="OK_Click"/>
            <Button Name="btn_Cancel" Content="Abbrechen" Margin="7,0,0,0" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
